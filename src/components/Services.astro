---
import "../styles/services.css";
---
<section id="services" class="services-section">
  <h2>Nuestros Servicios</h2>
  <div class="services-grid">
    <!-- Lavado Común -->
    <div class="service-card">
      <div class="service-header basic">
        <h3>Lavado Común 💦</h3>
        <p class="price">Autos: $550 | Camionetas: $650 | Furgoneta: $750</p>
      </div>
      <div class="service-body">
        <ul>
          <li>✅ Lavado exterior</li>
          <li>✅ Aspirado</li>
          <li>✅ Limpieza de Plásticos</li>
        </ul>
      </div>
    </div>

    <!-- Lavado Premium -->
    <div class="service-card">
      <div class="service-header premium">
        <h3>Lavado Premium 💦⭐️</h3>
        <p class="price">Autos: $750 | Camionetas: $800 | Furgoneta: $950</p>
      </div>
      <div class="service-body">
        <ul>
          <li>✨ Lavado exterior con shampoo con cera</li>
          <li>✨ Aspirado interior</li>
          <li>✨ Renovador de plásticos interior y exterior</li>
          <li>✨ Renovador de neumáticos</li>
          <li>✨ Desengrasante de llantas</li>
          <li>✨ Perfumado</li>
        </ul>
      </div>
    </div>
  </div>

  <!-- Sección de "También ofrecemos" -->
  <h2 class="extras-title">También ofrecemos</h2>
  <div class="extras-grid">
    <!-- Café Gratis -->
    <div class="extra-item">
      <div class="extra-icon">☕</div>
      <h3>Café</h3>
      <p>Relájate mientras cuidamos tu auto.</p>
    </div>
    <!-- Llaveros Personalizados -->
    <div class="extra-item">
      <div class="extra-icon">🔑</div>
      <h3>Llaveros Personalizados</h3>
      <p>Un detalle especial para tu vehículo.</p>
    </div>
    <!-- WiFi Gratis -->
    <div class="extra-item">
      <div class="extra-icon">📶</div>
      <h3>WiFi Gratis</h3>
      <p>Mantente conectado mientras esperas.</p>
    </div>
  </div>
</section>
